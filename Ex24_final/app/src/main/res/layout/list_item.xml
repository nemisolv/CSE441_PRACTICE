<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Row for Currency Exchange Rates -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/france"/>

        <TextView
            android:id="@+id/text_buy_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Buy Cash:"
            android:textColor="@color/gray"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/text_buy_cash_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_sell_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Sell Cash:"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/text_sell_cash_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=""
            android:textColor="@color/black" />
    </TableRow>

    <!-- Row for Securities Information -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/text_currency_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="USD"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/text_buy_securities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Buy Securities:"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/text_buy_securities_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=""
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_sell_securities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Sell Securities:"
            android:textColor="@color/gray"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/text_sell_securities_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text=""
            android:textColor="@color/black" />
    </TableRow>

</TableLayout>